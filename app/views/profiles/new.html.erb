
<div class="validation-messages" >
	<% if @profile.errors.any? %>
		<ul>
			<% @profile.errors.each do | field, msg| %>
				<li><%= msg %></li> <br />
   			<% end %>
   		<ul>
	<% end %>
</div>

<div class="profile-instruction">
	<h3>
		Add a Profile
	</h3>

	<p>
		Help us get to know you better by answering a few questions about yourself.
	</p>
</div>

<div class="profile-form">
	<%= form_for([@user, @profile], method: :post) do |f| %>
		<%= f.label "First Name" %><br>
		<%= f.text_field :fname %><br>
		<%= f.label "Age" %><br>
		<%= f.text_field :age %><br>
		<%= f.label "Zip" %><br>
		<%= f.text_field :zip, placeholder: "5 digit zip" %><br>
		<%= f.label "Inculding yourself, how may people live in your home?" %><br>
		<%= f.text_field :total_household_members %><br>
		<%= f.submit "Add Profile" %>
	<% end %>
</div>